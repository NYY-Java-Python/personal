<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lingku.xundao.user.mapper.UserMapper">

	<select id="findUserById" resultType="com.lingku.xundao.user.pojo.UserInfo"
		parameterType="java.lang.Integer">

		select * from sys_user
		<where>
			id = #{id}
		</where>

	</select>

	<select id="findByUsername" resultType="com.lingku.xundao.user.pojo.UserInfo"
		parameterType="java.lang.String">
		select user_id,password,username from sys_user
		<where>
			username = #{username}
		</where>
	</select>


	<!--更新用户信息 -->
	<update id="updateUserInfo" parameterType="com.lingku.xundao.user.pojo.UserInfo">
		update sys_user
		<trim prefix="set" suffixOverrides=",">
			<if test="username!=null and username!='' and username!='null'">
				username=#{username},
			</if>
			<if test="end_time!=null and end_time!='' and end_time!='null'">
				password = #{password},
			</if>
			<if test="start_time!=null and start_time!='' and start_time!='null'">
				role_id= #{role_id},
			</if>
			<if test="end_time!=null and end_time!='' and end_time!='null'">
				depe_id = #{dept_id},
			</if>
			<if test="end_time!=null and end_time!='' and end_time!='null'">
				name = #{name}
			</if>
		</trim>
		<where>
			user_id= #{user_id}
		</where>
	</update>

	<!--增加用户信息 -->
	<insert id="addUser" parameterType="com.lingku.xundao.user.pojo.UserInfo">
		insert into

	</insert>

	<!-- 删除用户信息(单个) -->

	<delete id="deleteUser" parameterType="com.lingku.xundao.user.pojo.UserInfo">
		delete

	</delete>


	<!-- 删除(多个) -->

	<delete id="deleteMoltiUser">

	</delete>





</mapper>
